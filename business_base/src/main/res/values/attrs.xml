<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="banner_view">
        <!--点的大小-->
        <attr name="pointSize" format="dimension" />
        <!--已选中点-->
        <attr name="pointSelectDrawable" format="color|reference" />
        <!--默认点-->
        <attr name="pointDefaultDrawable" format="color|reference" />
        <!--两个点距离-->
        <attr name="pointDistance" format="dimension" />
        <!--点的位置-->
        <attr name="pointGravity" format="enum">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>

        <!--文字大小-->
        <attr name="descTextSize" format="dimension" />
        <!--文字大小-->
        <attr name="descTextColor" format="color" />
        <!--文字的位置-->
        <attr name="descTextGravity" format="enum">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>

        <!--底部控件的背景色-->
        <attr name="bottomLayoutBackGroundColor" format="color" />
        <!--底部控件的左Padding-->
        <attr name="bottomLayoutPaddingLeft" format="dimension" />
        <!--底部控件的右Padding-->
        <attr name="bottomLayoutPaddingRight" format="dimension" />
        <!--底部控件的右Padding-->
        <attr name="bottomLayoutPaddingTop" format="dimension" />
        <!--底部控件的右Padding-->
        <attr name="bottomLayoutPaddingBottom" format="dimension" />

        <!--宽高比例-->
        <attr name="heightProportion" format="float" />
        <attr name="widthProportion" format="float" />

        <!--是否自动滚动（默认不滚动）-->
        <attr name="autoScroll" format="boolean" />

    </declare-styleable>

    <declare-styleable name="custom_item">
        <attr name="itemLeftText" format="string" />
        <attr name="itemLeftTextColor" format="color" />
        <attr name="itemLeftTextSize" format="dimension" />
        <attr name="itemLeftDrawable" format="reference" />
        <attr name="itemLeftDrawablePadding" format="dimension" />

        <attr name="itemRightText" format="string" />
        <attr name="itemRightTextColor" format="color" />
        <attr name="itemRightTextSize" format="dimension" />
        <attr name="itemRightDrawable" format="reference" />
        <attr name="itemRightDrawablePadding" format="dimension" />

        <attr name="itemTopLineHeight" format="dimension" />
        <attr name="itemTopLinePaddingLeft" format="dimension" />
        <attr name="itemTopLinePaddingRight" format="dimension" />
        <attr name="itemTopLineColor" format="color" />

        <attr name="itemBottomLineHeight" format="dimension" />
        <attr name="itemBottomLinePaddingLeft" format="dimension" />
        <attr name="itemBottomLinePaddingRight" format="dimension" />
        <attr name="itemBottomLineColor" format="color" />
    </declare-styleable>

    <!--SwipeMenu-->
    <declare-styleable name="SwipeMenu">
        <attr name="swipe_direction" format="enum">
            <enum name="left_to_right" value="1" />
            <enum name="right_to_left" value="2" />
        </attr>
    </declare-styleable>

</resources>
